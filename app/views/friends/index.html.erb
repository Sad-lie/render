
<h1>Friend list</h1>
<table class="table table-striped table-hover">
 <thead class="thread-dark">
  <tr>
    <th>Name</th>

    <th>Number</th>
    <th>Email</th>
  </tr>

 </thead>
    
<!--div id="friends" -->
<tbody >

<% @friends.each do |friend| %>
  <tr>
    <td><%= link_to friend.first_name.capitalize + ' ' + friend.last_name.capitalize, friend %></td>
    <td><%= friend.phone %></td>
    <td><%= friend.email.capitalize %></td>
  </tr>
<% end %>

</tbody>
  </div>

  </table>

<%= link_to "New friend", new_friend_path,class:"btn btn-secondary" %>

<%= yield %>
